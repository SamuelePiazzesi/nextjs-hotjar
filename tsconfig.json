{
	"compilerOptions": {
		"target": "es6",
		"module": "commonjs",
		"declaration": true,
		"sourceMap": true,
		"outDir": "./dist",
		"removeComments": true,
		"importHelpers": true,
		"strict": true,
		"esModuleInterop": true,
		"skipLibCheck": true,
		"forceConsistentCasingInFileNames": true,
		"jsx": "react",
		"noEmit": true
	},
	"include": ["./src/**/*.ts"],
	"exclude": ["./src/**/*.test.ts"]
}
